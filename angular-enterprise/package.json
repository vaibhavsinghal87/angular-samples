{
  "name": "angular-enterprise",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "mock:start": "node mock-server/server.js",
    "lint": "eslint \"**/*.{js,ts}\" --fix",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"**/*.{js,ts,html,scss}\"",
    "enterprise-shell:start": "ng serve enterprise-shell",
    "enterprise-shell:build": "ng build enterprise-shell",
    "enterprise-shell:build:analyse": "ng build enterprise-shell --source-map",
    "enterprise-shell:lint": "ng lint enterprise-shell",
    "digital-shell:start": "ng serve digital-shell",
    "digital-shell:build": "ng build digital-shell",
    "digital-shell:build:analyse": "ng build digital-shell --source-map",
    "digital-shell:lint": "ng lint digital-shell",
    "platform-shell:start": "ng serve platform-shell",
    "platform-shell:build": "ng build platform-shell",
    "platform-shell:build:analyse": "ng build platform-shell --source-map",
    "platform-shell:lint": "ng lint platform-shell",
    "core-ui:build": "ng build core-ui",
    "core-ui:lint": "ng lint core-ui",
    "run:all": "node node_modules/@angular-architects/module-federation/src/server/mf-dev-server.js",
    "cache:clean": "ng cache clean",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,scss,css}": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular-architects/module-federation": "^20.0.0",
    "@angular/cdk": "^20.2.11",
    "@angular/common": "^21.0.1",
    "@angular/compiler": "^21.0.1",
    "@angular/core": "^21.0.1",
    "@angular/forms": "^21.0.1",
    "@angular/material": "^20.2.11",
    "@angular/platform-browser": "^21.0.1",
    "@angular/router": "^21.0.1",
    "bootstrap": "^5.3.8",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.1",
    "@angular/cli": "^21.0.1",
    "@angular/compiler-cli": "^21.0.1",
    "@eslint/js": "^9.39.0",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "20.5.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.9.0",
    "json-server": "^0.17.4",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.2.7",
    "ng-packagr": "^21.0.0",
    "ngx-build-plus": "^20.0.0",
    "prettier": "^3.6.2",
    "source-map-explorer": "^2.5.3",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.46.1"
  }
}